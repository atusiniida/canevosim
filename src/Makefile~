CXX = clang++
#CXXFLAGS += -std=c++11 -stdlib=libc++
CXXFLAGS +=  -stdlib=libc++   
#CXXFLAGS +=  -g -O0
#LDFLAGS += 
#LIBS +=  -lm

TARGET = main

CXXSRCS = \
	bep.cpp \
	tumor.cpp \
	simulator.cpp \
	random.cpp\

INST_HDRS = \


NOINST_HDRS = \
	tumor.h \
	simulator.h \
	random.h \
	MT.h\

SRCS = $(CXXSRCS)

.SUFFIXES: .o .cpp
CXXOBJS = $(CXXSRCS:.cpp=.o)
OBJS = $(CXXOBJS)

all: $(TARGET)

$(TARGET): $(OBJS) 
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS) $(LDFLAGS) $(LIBS)

.cpp.o:
	$(CXX) $(CXXFLAGS) -o $@ -c $<

install:
	mkdir -p $(BINDIR)
	cp $(TARGET) $(BINDIR)

clean:
	$(RM) $(OBJS) $(TARGET)

depend:
	$(CXX) -MM -MG $(SRCS) $(CXXFLAGS) > Makefile.depend

-include Makefile.depend
